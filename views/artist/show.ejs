
<form action="/artist/<%= artist.id %>" method="POST" role="form">
  <legend>Update an Artist</legend>

  <div class="form-group">
    <input name="id" value="<%= artist.id %>" class="hidden">
    <label for="">Name</label>
    <input name="name" value="<%= artist.name %>" type="text" class="form-control" id="" placeholder="Input field" autofocus>
    <label for="">genre</label>
    <input name="genre" value="<%= artist.genre %>" type="text" class="form-control" id="" placeholder="Input field">
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
</form>

<div class="row">
  <span class="pull-right"><a href="/artist/<%= artist.id %>/album/new"><button class="btn btn-success">Add Album</button></a></span>
</div>

<h3>Album List:</h3>
<ul>
  <% artist.albums.forEach(function(album){ %>
    <li><%= album.name %></li>
  <% }) %>
</ul>